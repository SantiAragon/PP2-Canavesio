{% extends 'base.html.twig' %}

{% block title %}Restablecer contraseña{% endblock %}

{% block body %}
<div class="container">
    <h1>Restablecer contraseña</h1>
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    <form method="post">
        <input type="hidden" name="token" value="{{ token }}">
        <div class="form-group">
            <label for="password">Nueva contraseña</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Nueva contraseña" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Actualizar contraseña</button>
    </form>
</div>
{% endblock %}
 