{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}<link href="{{ asset('styles/login.css') }}" rel="stylesheet">{% endblock %}

{% block body %}
<div class="container">
    <div class="form-wrapper">
        <h1>Iniciar Sesión</h1>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <input type="email" value="{{ last_username }}" name="_username" id="username" 
                class="form-control" placeholder="Email" autocomplete="email" required autofocus>
            <input type="password" name="_password" id="password" 
                class="form-control" placeholder="Contraseña" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn" type="submit">Acceder</button>
        </form>
       <div class="remember-forgot">
            <a href="#">¿Olvidaste tu cuenta?</a>
            <a href="{{ path('app_register') }}">       Registrarse</a>
        </div>
    </div>
</div>
{% endblock %}
