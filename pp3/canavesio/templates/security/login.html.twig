{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}<link href="{{ asset('styles/login.css') }}" rel="stylesheet">{% endblock %}

{% block body %}

    <div class="container">
        <div class="form-wrapper">
            <h1>Iniciar Sesión</h1>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="input-icon">
                    <i class="fas fa-envelope"></i>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="Email" autocomplete="email" required autofocus>
                </div>
                <div class="input-icon">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="_password" id="password" class="form-control" placeholder="Contraseña" autocomplete="current-password" required>
                </div>

                <div class="remember-forgot">
                    <div>
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Recordar</label>
                    </div>
                    <a href="#">Olvidé la contraseña</a>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary" type="submit">Acceder</button>
            </form>
            <a href="{{ path('app_register') }}" style="display: block; margin-top: 10px; color: #fff;">No tengo cuenta. Crear una</a>

