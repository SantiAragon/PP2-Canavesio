{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('styles/detailM.css') }}" rel="stylesheet" />
{% endblock %}

{% block title %}
  {{ usedMachinery.machineryName }}
{% endblock %}

{% block body %}
  <div class="detalle-maquinaria">
    <h1>{{ usedMachinery.machineryName }}</h1>
    <div class="maquinaria-info">
      {% if usedMachinery.imageFilename %}
        <img src="{{ asset('images/' ~ usedMachinery.imageFilename) }}" alt="{{ usedMachinery.machineryName }}" />
      {% endif %}
      <p><strong>Marca:</strong> {{ usedMachinery.brand }}</p>
      <p><strong>Años de uso:</strong> {{ usedMachinery.yearsOld }}</p>
      <p><strong>Meses:</strong> {{ usedMachinery.months }}</p>
      <p><strong>Horas de uso:</strong> {{ usedMachinery.hoursOfUse }}</p>
      <p><strong>Último servicio:</strong> {{ usedMachinery.lastService|date('d/m/Y') }}</p>
      <p><strong>Precio:</strong> ${{ usedMachinery.price }}</p>
      <p><strong>Categoría:</strong> {{ usedMachinery.category }}</p>
    </div>
  </div>
{% endblock %}
